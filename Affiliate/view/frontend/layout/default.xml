<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="privacy-policy-link" remove="true" />
        <referenceBlock name="footer_links">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="custom-link" ifconfig="affiliate/general/enable_affiliate">
                <arguments>
                    <argument name="label" xsi:type="string">My Affiliate</argument>
                    <argument name="path" xsi:type="string">affiliate/customer/index/</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
